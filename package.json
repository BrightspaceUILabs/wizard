{
  "name": "@brightspace-ui-labs/wizard",
  "description": "Polymer based web-component for wizard",
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrightspaceUILabs/wizard.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "d2l-wizard.js",
    "d2l-step.js",
    "d2l-single-step-header.js",
    "language-behaviour.js",
    "/lang"
  ],
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:lit",
    "lint:eslint": "eslint . --ext .js,.html",
    "lint:lit": "lit-analyzer role-selector.js demo test",
    "lint:style": "stylelint \"**/*.js\"",
    "start": "es-dev-server --app-index demo/index.html --node-resolve --dedupe --open --watch",
    "test": "npm run lint && npm run test:headless && npm run test:diff",
    "test:diff": "mocha ./**/*.visual-diff.js -t 40000",
    "test:diff:golden": "mocha ./**/*.visual-diff.js -t 40000 --golden",
    "test:diff:golden:commit": "commit-goldens",
    "test:headless": "karma start",
    "test:headless:watch": "karma start --auto-watch=true --single-run=false",
    "test:sauce": "karma start karma.sauce.conf.js"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/BrightspaceUILabs/wizard/issues"
  },
  "homepage": "https://github.com/BrightspaceUILabs/wizard#readme",
  "dependencies": {
    "@brightspace-ui/core": "^1",
    "@polymer/app-route": "^3.0.0",
    "@polymer/iron-a11y-keys": "^3.0.0",
    "@polymer/iron-collapse": "^3.0.0",
    "@polymer/iron-form": "^3.0.0",
    "@polymer/iron-form-element-behavior": "^3.0.0",
    "@polymer/iron-icon": "^3.0.0",
    "@polymer/iron-location": "^3.0.0",
    "@polymer/iron-meta": "^3.0.0",
    "@polymer/iron-pages": "^3.0.0",
    "@polymer/paper-tabs": "^3.1.0",
    "@polymer/paper-toggle-button": "^3.0.0",
    "@polymer/polymer": "^3.2.0",
    "@polymer/promise-polyfill": "^3.0.0-pre.18",
    "@polymer/test-fixture": "^4.0.2",
    "d2l-localize-behavior": "BrightspaceUI/localize-behavior#semver:^2",
    "@brightspace-ui/stylelint-config": "0.0.1",
    "@webcomponents/webcomponentsjs": "^2",
    "lit-element": "^2",
    "stylelint": "^13.7.1"
  },
  "devDependencies": {
    "@brightspace-ui/visual-diff": "^1.5.1",
    "@open-wc/testing": "^2",
    "@open-wc/testing-karma": "^3",
    "@semantic-release/git": "^9",
    "babel-eslint": "^10",
    "deepmerge": "^3",
    "es-dev-server": "^1.57.4",
    "eslint": "^6",
    "eslint-config-brightspace": "^0.6.7",
    "eslint-plugin-html": "^6",
    "eslint-plugin-lit": "^1",
    "eslint-plugin-sort-class-members": "^1",
    "frau-ci": "^1",
    "karma-sauce-launcher": "^2",
    "lit-analyzer": "^1",
    "puppeteer": "^4.0.1",
    "semantic-release": "^17.2.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ]
    ]
  }
}
